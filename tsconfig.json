{
    "compilerOptions": {
        "module": "ES6",
        "target": "es6",
        "jsx": "preserve",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}